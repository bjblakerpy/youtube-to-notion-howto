# Port for the service to listen on (default: 8080)
PORT=8080

# Secret token for securing the webhook (you generate this yourself)
# This must match the 'Authorization: Bearer <WEBHOOK_SECRET>' header in your request
WEBHOOK_SECRET=your_secret_token_here

# Google Gemini API Key
# Get one here: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Notion Integration Secret
# Create an integration here: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_integration_secret_here

# Supadata API Key (for YouTube transcriptions)
# Get one here: https://supadata.ai
SUPADATA_API_KEY=your_supadata_api_key_here

# Default Notion Parent ID (Database or Page)
# Copy the ID from the URL of your Notion Database/Page
NOTION_DEFAULT_PARENT_ID=your_notion_database_or_page_id_here

# Default Parent Type ('database' or 'page')
NOTION_DEFAULT_PARENT_TYPE=database
